<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/testimony_Rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FaceRGBPersonActivity">


    <com.example.datalibrary.gl.view.GlMantleSurfacView
        android:id="@+id/camera_textureview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/mongolia_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--    title-->
    <include
        android:id="@+id/testimony_titleRl"
        layout="@layout/layout_title_testimony" />


    <include layout="@layout/item_save_camera"
        android:layout_above="@+id/test_rgb_rl"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <!--RGB 检测图片测试-->
    <RelativeLayout
        android:id="@+id/test_rgb_rl"
        android:layout_width="110dp"
        android:layout_height="82.7dp"
        android:layout_above="@+id/person_buttomLl_All"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/test_rgb_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gate_imageview_radius"
            android:src="@mipmap/ic_image_video" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_alignParentBottom="true"
            android:background="#B3000000"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="RGB图片帧"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/person_kaifaIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginEnd="2dp"
                android:src="@mipmap/ic_icon_develop_success"
                android:visibility="gone" />
        </RelativeLayout>

    </RelativeLayout>

    <!--        提示-->
    <include layout="@layout/layout_testimory_hint" />

    <RelativeLayout
        android:id="@+id/person_buttomLl_All"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/testimony_titleRl"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/tty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/textSerial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="串口：" />

            <EditText
                android:id="@+id/editSerial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="/dev/ttyS8" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tty"
            android:id="@+id/readCardLL"
           >
            <Button
                android:id="@+id/btnStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="开始读卡"
                android:onClick="onBnStart" />

            <Button
                android:id="@+id/btnStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="停止读卡"
                android:onClick="onBnStop" />


        </LinearLayout>
        <TextView
            android:id="@+id/textResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/readCardLL"
            android:layout_marginTop="10dp"
            android:text="TextView" />
        <!--        预览模式-->
<!--        <include layout="@layout/layout_testimony_preview_mode" />-->
        <!--        开发模式-->
<!--        <include layout="@layout/layout_testimony_development_model" />-->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fingerprintRl"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/testimony_titleRl"
        >

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="111"
            android:textSize="20sp" />
       <LinearLayout
           android:id="@+id/fpBtTl"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/txtResult">
           <Button
               android:id="@+id/startFpBt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:onClick="onBnFpStart"
               android:text="Start"
               android:textAllCaps="false" />


           <Button
               android:id="@+id/stopFpBt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:onClick="onBnFpStop"
               android:text="Stop"
               android:textAllCaps="false" />

       </LinearLayout>

        <EditText
            android:id="@+id/editFeatureFileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_below="@+id/fpBtTl"
            android:text="/sdcard/fp.dat" />

        <Button
            android:id="@+id/btnImport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onBnFpImport"
            android:text="Import"
            android:layout_below="@+id/editFeatureFileName"
            android:textAllCaps="false" />

        <ImageView
            android:id="@+id/imageFP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnImport"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/person_baiduTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="@string/home_baidu"
        android:textColor="#808080"
        android:textSize="12sp" />
</RelativeLayout>