<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:alpha="0.9"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#191970">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/my_return"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@+id/preview_text"
        android:layout_alignLeft="@id/preview_text"
        android:layout_alignRight="@id/preview_text"
        android:layout_marginTop="-12dp"
        android:src="@mipmap/ic_highlight" />

    <TextView
        android:id="@+id/preview_text"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@+id/btn_back"
        android:text="预览模式"
        android:textColor="#d3d3d3"
        android:textSize="@dimen/title_font"
        android:visibility="gone" />



    <ImageView
        android:id="@+id/develop_view"
        android:layout_width="102dp"
        android:layout_height="12dp"
        android:layout_below="@+id/develop_text"
        android:layout_alignLeft="@id/develop_text"
        android:layout_alignRight="@id/develop_text"
        android:layout_marginTop="-12dp"
        android:src="@mipmap/ic_highlight"
        android:visibility="gone" />
    <TextView
        android:id="@+id/develop_text"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="60dp"
        android:layout_toEndOf="@+id/preview_text"
        android:text="开发模式"
        android:layout_centerVertical="true"
        android:textColor="#999999"
        android:textSize="@dimen/title_font"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="人证合一核验系统"
        android:textSize="10sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/btn_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/my_setting" />

</RelativeLayout>