<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <com.example.datalibrary.deptrum.GLFrameSurface
        android:id="@+id/gl_ir"
        android:layout_width="83dp"
        android:layout_height="110dp"
        android:layout_above="@+id/kaifa_relativeLayout"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_gravity="center_vertical" />

    <com.example.datalibrary.deptrum.GLFrameSurface
        android:id="@+id/gl_depth"
        android:layout_width="83dp"
        android:layout_height="110dp"
        android:layout_above="@+id/kaifa_relativeLayout"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="23dp"
        android:visibility="invisible"
        android:layout_marginBottom="5dp" />

    <com.example.datalibrary.deptrum.MantleGLFrameSurface
        android:id="@+id/gl_rgb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_gravity="center_vertical" />
    <TextureView
        android:id="@+id/draw_detect_face_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!--圆形进度条-->
    <RelativeLayout
        android:id="@+id/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/yvlan_relativeLayout">

        <ImageView
            android:id="@+id/progress_bar_view"
            android:layout_width="@dimen/finance_355_dp"
            android:layout_height="@dimen/finance_355_dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_loading_grey" />
    </RelativeLayout>

    <TextView
        android:id="@+id/pre_toast_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/yvlan_relativeLayout"
        android:gravity="center_horizontal"
        android:text="请保持面部在取景框内"
        android:textColor="@color/finance_white"
        android:textSize="@dimen/finance_22_sp" />

    <include layout="@layout/item_save_camera"
        android:layout_above="@+id/face_detect_image_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <LinearLayout
        android:id="@+id/show_rgb_nir_depth"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:visibility="gone"
        android:layout_above="@id/kaifa_relativeLayout"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--送检图片-->


            <ImageView
                android:id="@+id/face_detect_image_view"
                android:layout_width="110dp"
                android:layout_height="83dp"
                android:layout_above="@+id/kaifa_relativeLayout"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/gate_imageview_radius"
                android:src="@mipmap/ic_image_video" />

            <LinearLayout
                android:id="@+id/rgb_surface_Ll"
                android:layout_width="110dp"
                android:layout_height="23dp"
                android:layout_above="@+id/kaifa_relativeLayout"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/relativelayout_radius"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detect_surface_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text=" RGB图片帧"
                    android:textColor="#FFFFFFFF"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/is_check_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/start_15" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/nir_surface_Ll"
                android:layout_width="110dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_height="23dp"
                android:background="@drawable/relativelayout_radius"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nir_surface_textTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" NIR图片帧"
                    android:textColor="#FFFFFFFF"

                    android:textSize="14sp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/nir_is_check_image_Iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/start_15"
                    android:visibility="visible" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/depth_surface_Ll"
                android:layout_width="110dp"
                android:layout_height="23dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/relativelayout_radius"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/depth_surface_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Depth图片帧"
                    android:textColor="#FFFFFFFF"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/depth_is_check_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/start_15"
                    android:visibility="visible" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_compare_status"
        android:layout_width="150dp"
        android:layout_height="@dimen/finance_44_dp"
        android:layout_above="@+id/face_detect_image_view"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_compare_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/finance_00BAF2"
            android:textSize="@dimen/finance_20_sp" />
    </RelativeLayout>

    <include
        android:id="@+id/search_title"
        layout="@layout/layout_title_finance" />

    <View
        android:id="@+id/search_title_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/search_title"
        android:background="#333333" />

    <!--********** 信息展示部分 **********-->
    <!--开发模式-->
    <RelativeLayout
        android:id="@+id/kaifa_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/finance_127_dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/finance_10_dp"
        android:layout_marginRight="@dimen/finance_10_dp"
        android:layout_marginBottom="@dimen/finance_5_dp"
        android:background="@drawable/finance_radius"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/finance_15">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/finance_20"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_detect_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检测耗时：0ms"
                    android:textColor="@color/finance_white"
                    android:textSize="@dimen/finance_12_sp" />

                <TextView
                    android:id="@+id/tv_rgb_live_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_detect"
                    android:text="RGB活体检测耗时：0ms"
                    android:textColor="@color/finance_white"
                    android:textSize="@dimen/finance_12_sp" />

                <TextView
                    android:id="@+id/tv_rgb_live_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RGB活体检测结果：false"
                    android:textColor="@color/finance_white"
                    android:textSize="@dimen/finance_12_sp" />

                <TextView
                    android:id="@+id/tv_nir_live_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_detect"
                    android:text="NIR活体检测耗时：0ms"
                    android:textColor="@color/finance_white"
                    android:textSize="@dimen/finance_12_sp" />

                <TextView
                    android:id="@+id/tv_nir_live_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIR活体检测结果：false"
                    android:textColor="@color/finance_white"
                    android:textSize="@dimen/finance_12_sp" />
            </LinearLayout>

            <View
                android:id="@+id/id_view"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/id_view"
                android:layout_marginLeft="@dimen/finance_20"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_depth_live_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Depth活体检测耗时：0ms"
                    android:textColor="@color/finance_white"
                    android:textSize="@dimen/finance_12_sp" />

                <TextView
                    android:id="@+id/tv_depth_live_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Depth活体检测结果：false"
                    android:textColor="@color/finance_white"
                    android:textSize="@dimen/finance_12_sp" />

                <TextView
                    android:id="@+id/tv_all_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总耗时：0ms"
                    android:textColor="@color/finance_white"
                    android:textSize="@dimen/finance_12_sp" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <include
        layout="@layout/layout_buttom"
        android:visibility="visible" />

    <include
        layout="@layout/layout_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_title_view"
        android:visibility="gone" />

    <include
        android:id="@+id/finance_no_detect"
        layout="@layout/layout_no_detect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_title_view"
        android:visibility="gone" />
</RelativeLayout>
